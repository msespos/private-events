<h2><%= title %></h2>

<% events.each do |e| %>
  Creator:
  <%= e.creator.name %><br>
  Name:
  <%= e.name %><br>
  Description:
  <%= e.description %><br>
  Date:
  <%= e.date %><br>
  Time:
  <%= e.time %><br>
  Location:
  <%= e.location %><br>
  <%= link_to "show event", e %><br>

  <% if current_user %>
    <% user_ticket = current_user.ticket_for e %>
    <%= user_ticket.inspect %>
    <% if time_category != :past && user_ticket && !user_ticket.attending? %>
      <h2><%= "You're invited!" %></h2>
      <%= form_with model: Ticket.new, local: true do |f| %>
        <%= f.hidden_field 'attending', value: true %>
        <%= f.submit 'Attend it!' %>
      <% end %><br>
    <%# elsif user is attending %>
      <%# <p>Attending</p> %>
      <%#= button_to "Unattend" - sets attending to false %>
    <% end %><br>
  <% end %>
<% end %>
