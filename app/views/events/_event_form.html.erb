<div class="flash">
  <% if flash.key? :error %>
    <h2><%= flash[:error] %></h2>
  <% end %>
</div>

<div class="index-header-logged-in">
  <div class="logo">Private Events!</div>
  <div class="index-header-logged-in-right">
      <%= button_to "home", root_path, method: :get, class:"button" %>
  </div>
</div>
<div class="username-and-email">
  <%= current_user.name %><br>
  <%= current_user.email %>
</div>

<h1><%= title %></h1>

<%= form_with model: @event, local: true, class:"event-form" do |f| %>
  <%= f.label :name, class:"label" %>
  <%= f.text_field :name, class:"form-field" %>
  <%= f.label :description, class:"label" %>
  <%= f.text_area :description, class:"text-area" %>
  <%= f.label :date, class:"label" %>
  <%= f.date_field :date, class:"form-date-time-field" %>
  <%= f.label :time, class:"label" %>
  <%= f.time_field :time, class:"form-date-time-field" %>
  <%= f.label :location, class:"label" %>
  <%= f.text_field :location, class:"form-field" %>
  <%= f.submit btn %>
<% end %>
